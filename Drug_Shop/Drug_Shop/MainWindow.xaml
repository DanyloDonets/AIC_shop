<Window x:Name="Drug_Store" x:Class="Drug_Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drug_Shop"
        mc:Ignorable="d"
        Title="Store" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Sell" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20,5,20,5" Background="#FFABAEF7" Click="Button_Click_1"/>
        <Button Content="Manage" FontSize="25" Grid.Column="1" HorizontalAlignment="Center" Padding="20,5,20,5" VerticalAlignment="Center" Background="#FFA3F1F9" Click="Button_Click"/>
    </Grid>
</Window>
